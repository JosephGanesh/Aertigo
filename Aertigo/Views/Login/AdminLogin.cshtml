@using Aertigo.Models



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Aertigo | Login</title>
    <link rel="stylesheet" href="~/Utilities/bootstrap-4.3.1-dist/css/bootstrap.min.css" />
    <script src="~/Utilities/bootstrap-4.3.1-dist/js/bootstrap.min.js"></script>
    <script src="~/Utilities/Jquery/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    @{
        bool error = (ViewBag.Error != null) ? (bool)ViewBag.Error : false;
        if (error)
        {
            <script>
                $(document).ready(function () {
                    $.alert({
                        title: 'Login Failed',
                        content: 'Invalid Admin'
                    });

                    $("#tbEmail").val('');
                    $("#tbPassword").val('');
                });
            </script>
        }
    }
    <style>
        .aertigo_logo {
            font-family: 'Rubik';
            color: #FF8A5C;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center display-2 aertigo_logo">
            <p>Aertigo Admin</p>
            <hr />
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    <div class="form-group text-center">
                        <p class="lead" style="color: #FF8A5C;">Fill Following Details: </p>
                        <table class="table table-borderless">
                            <tr>
                                <td>
                                    <input type="email" id="tbEmail" name="adminEmail" class="form-control" placeholder="Enter Admin Email ID" required />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="password" id="tbPassword" name="adminPassword" class="form-control" placeholder="Enter Admin Password" required />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <button class="btn btn-block" style="background-color: #FF8A5C; color: white;">Let's Fix</button>
                                </td>
                            </tr>
                        </table>
                    </div>
                }
            </div>
        </div>
        <div class="text-center lead" style="color: #F77754; font-family: 'Rubik';">
            <p>2019 &copy; All Rights Reserved To Aertigo</p>
        </div>
    </div>
</body>
</html>
